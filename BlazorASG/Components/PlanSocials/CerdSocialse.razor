<div class="row g-4 g-lg-5" style="--bs-gutter-y: 3% !important;">
    @foreach (var plan in PricingPlans)
    {
        <div class="col-xl-10 mx-auto">
            <div class="card card-hover-shadow card-hover-transition @plan.BackgroundClass rounded-4 p-4 p-sm-5" data-bs-theme="@((plan.IsDarkTheme ? "dark" : null))">
                <div class="row g-4 g-md-0">
                    <div class="col-md-6">
                        <!-- Icon image -->
                        <div class="@plan.IconBackgroundClass shadow-primary rounded-circle mb-4">
                            <img src="@plan.Icon" class="h-40px" alt="@plan.Title image">
                        </div>
                        <p class="lead heading-color fw-semibold mb-2">@plan.Title</p>
                        <!-- Pricing text -->
                        <p class="mb-2">
                            <span class="h1 mb-0">@plan.Price</span>
                            @if (!string.IsNullOrEmpty(plan.Period))
                            {
                                <span> /@plan.Period</span>
                            }
                        </p>
                        <p class="mb-0">@plan.Description</p>
                    </div>

                    <div class="col-md-5 ms-auto">
                        <!-- Content -->
                        <div class="card-body d-flex flex-column h-100 p-0">
                            <span class="fw-semibold opacity-6 mb-1 mb-md-3">Quick look at all the features</span>
                            <!-- Feature list -->
                            @if (plan.Features != null && plan.Features.Any())
                            {
                                <ul class="list-group list-group-borderless mb-3">
                                    @foreach (var feature in plan.Features)
                                    {
                                        <li class="list-group-item d-flex heading-color mb-0"><i class="bi bi-check-lg text-success me-1"></i>@feature</li>
                                    }
                                </ul>
                            }
                            <!-- Button -->
                            <a class="@plan.ButtonClass icon-link icon-link-hover justify-content-center mb-0" href="@plan.ActionLink">
                                @plan.ButtonText
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

