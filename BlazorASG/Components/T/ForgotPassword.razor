@page "/forgot-password"
@using MudBlazor
 
    <MudText Typo="Typo.h5" Align="Align.Center">استعادة كلمة المرور</MudText>
    <MudTextField @bind-Value="Email" Label="البريد الإلكتروني" FullWidth="true" Required="true" />
    <MudButton Variant="MudBlazor.Variant.Filled" Color="MudBlazor.Color.Primary" FullWidth="true" OnClick="HandlePasswordReset">
        إرسال رابط الاستعادة
    </MudButton>
    <MudSpacer />
    <MudLink Href="/login">تسجيل الدخول</MudLink>
 

@code {
    private string Email;

    private void HandlePasswordReset()
    {
        // تنفيذ منطق استعادة كلمة المرور، مثل الاتصال بـ API لإرسال بريد إلكتروني
        Console.WriteLine($"تم إرسال رابط استعادة كلمة المرور إلى {Email}");
    }
}

