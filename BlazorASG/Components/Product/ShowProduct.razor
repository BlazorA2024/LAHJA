@page "/ShowProduct"
@using MudBlazor
 
<MudContainer MaxWidth="MaxWidth.Large">
    <MudGrid Spacing="3">
       
        <MudItem xs="12">
            <MudText Typo="Typo.h4" Align="MudBlazor.Align.Center">خطط الاستضافة</MudText>
        </MudItem>

        @foreach (var plan in HostingPlans)
        {
            <MudItem xs="12" md="3">
                <MudCard>
                    <MudCardHeader>
                        <MudText Typo="Typo.h6" Align="MudBlazor.Align.Center">@plan.Name</MudText>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudText>رسوم شهرية: @plan.MonthlyFee</MudText>
                        <MudText>تجديد الرسوم الشهرية: @plan.RenewalFee</MudText>
                        <MudText>التثبيت: @plan.Installation</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Variant="MudBlazor.Variant.Filled" Color="MudBlazor.Color.Primary" FullWidth="true">معرفة المزيد</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

