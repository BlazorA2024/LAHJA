	.pt-xl-9 {
		padding-top: 1rem !important;
	}


	.pb-0 {
		padding-bottom: 0 !important;
	}

	/* Decoration Styling (Blur and Weather Info) */
	.blur-9 {
		width: 100%;
		height: auto;
	}

	.opacity-2 {
		opacity: 0.2; /* Low opacity for blur decoration */
	}

	.position-absolute {
		position: absolute;
	}

	.mt-8 {
		margin-top: 3rem;
	}

